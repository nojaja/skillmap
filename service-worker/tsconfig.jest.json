{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "noEmit": true,
    "rootDir": ".",
    "types": ["jest", "node"],
    "allowImportingTsExtensions": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "baseUrl": ".",
    "verbatimModuleSyntax": false,
    "isolatedModules": true
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
