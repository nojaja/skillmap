generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model SkillStatus {
  id               Int      @id @default(1)
  availablePoints  Int      @default(3)
  unlockedSkillIds String   @default("[]")
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
